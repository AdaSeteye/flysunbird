ENV=local
APP_NAME=FlySunbird API
# Production: set to your frontend URLs, e.g. https://flysunbird.co.tz,https://admin.flysunbird.co.tz
# CORS_ORIGINS=
SECRET_KEY=change_me_super_secret
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

DATABASE_URL=postgresql+psycopg2://flysunbird:flysunbird@db:5432/flysunbird

REDIS_URL=redis://redis:6379/0

# Email (MailHog in docker-compose)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=ops@flysunbird.local


# Client (for payment redirects / ticket links)
# Local: use http://localhost:8000 so Stripe redirects back to API (which serves fly UI at /fly/)
CLIENT_BASE_URL=http://localhost:8000

# API public URL (for ticket QR code â€“ scanned QR opens PDF)
API_PUBLIC_URL=http://localhost:8000

# SendGrid (optional) - if set, will be used instead of SMTP
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=

# Ticket storage
TICKET_LOCAL_DIR=./data/tickets
GCS_BUCKET_NAME=
GOOGLE_APPLICATION_CREDENTIALS=

# Stripe (Pay with Card - redirect to Stripe Checkout)
# Get from https://dashboard.stripe.com/test/apikeys (Secret key = sk_test_...)
# For local webhook: run "stripe listen --forward-to localhost:8000/api/v1/webhooks/stripe" and set STRIPE_WEBHOOK_SECRET to the whsec_... shown
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

